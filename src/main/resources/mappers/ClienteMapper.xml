    -->
    <select id="getCodAndNombreActive" parameterType="int" resultMap="clienteMapDTO">
		SELECT COD_CLIENTE, NOMBRE_CLIENTE
		FROM CLIENTES
		WHERE COD_AREA_EMPRESA = #{codArea}
		AND COD_ESTADOCLIENTE = 1
		ORDER BY NOMBRE_CLIENTE ASC
    </select>

